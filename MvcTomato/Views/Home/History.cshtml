@using MvcTomato.Helpers
@using System.Globalization
@model IEnumerable<MvcTomato.ViewModels.HistoryDayViewModel>
@{
    ViewBag.Title = "History";
    int month;
    if (Request.Params["month"] == null)
    {
        month = DateTime.Today.Month;
    }
    else
    {
        month = int.Parse(Request.Params["month"]);
    }
}
<h2>@ViewBag.Title</h2>

<div>
    <div id="monthSelector" class="dropdown">
        <select class="form-control">
            @for (int i = 0; i < 12; i++)
            {
                <option @((month - 1) == i ? "selected=\"selected\"" : "") value="@(i + 1)">@CultureInfo.CurrentCulture.DateTimeFormat.MonthNames[i]</option>
            }
        </select>
    </div>
    <table class="table table-sm table-striped" style="width: 100%;">
        <tr>
            <th>Date</th>
            <th>Overtime</th>
            <th>Actions</th>
        </tr>
        @foreach (var day in Model)
        {
            <tr>
                <td>@day.Date.ToString("dd/MM/yyyy")</td>
                <td class="@(day.Statistics < TimeSpan.Zero ? "shorttime" : "overtime")">@TimeFormatter.FormatTimeSpan(day.Statistics)</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = day.Id }) | <a href="#" id="deleteLink" data-url="/Home/Delete" data-id="@day.Id">Delete</a></td>
            </tr>
        }
    </table>
</div>

